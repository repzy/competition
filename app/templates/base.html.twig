<!DOCTYPE html>
<html lang="en" class="h-100">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Primary Meta Tags -->
        {% set title = "База змагань зі спортивного туризму України" %}
        <title>{% block title %}{{ title }}{% endblock %}</title>
        <meta name="title" content="{% block meta_title %}{{ title }}{% endblock %}">
        <meta name="description" content="{% block meta_description %}{% endblock %}">

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website">
        <meta property="og:url" content="{% block og_url %}{{ app.request.uri }}{% endblock %}">
        <meta property="og:title" content="{% block og_title %}{{ title }}{% endblock %}">
        <meta property="og:description" content="{% block og_description %}{% endblock %}">
        <meta property="og:image" content="{% block og_image %}{% endblock %}">

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:url" content="{% block twitter_url %}{{ app.request.uri }}{% endblock %}">
        <meta property="twitter:title" content="{% block twitter_title %}{{ title }}{% endblock %}">
        <meta property="twitter:description" content="{% block twitter_description %}{% endblock %}">
        <meta property="twitter:image" content="{% block twitter_image %}{% endblock %}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body class="d-flex flex-column h-100" style="background-color: #f5f5f5">
        <header class="header">
            {% block header %}
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <div class="container pl-sm-3 pr-sm-3">
                        <a class="navbar-brand" href="{{ path('competitions_list') }}">БЗСТУ</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse " id="navbarSupportedContent">
                            <ul class="navbar-nav ml-auto">
                                {% if is_granted('ROLE_USER') %}
                                    <li class="nav-item dropdown pr-lg-2">
                                        <a class="col-sm-12 mt-1 btn btn-outline-light dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Профіль
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="dropdown-item" href="{{ path('profile_competitions_list') }}">Мої змагання</a>
                                            <a class="dropdown-item" href="{{ path('profile_password_change') }}">Змінити пароль</a>
                                        </div>
                                    </li>
                                    <li class="nav-item">
                                        <a class="col-sm-12 mt-1 btn btn-outline-light" href="{{ path('app_logout') }}">Вихід</a>
                                    </li>
                                {% else %}
                                    <li class="nav-item pr-lg-2">
                                        <a class="col-sm-12 mt-1 btn btn-outline-light" href="{{ path('app_registration') }}">Реєстрація</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="col-sm-12 mt-1 btn btn-outline-light" href="{{ path('app_login') }}">Увійти</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </nav>
            {% endblock %}
        </header>

        <br>

        <article class="container">
            {% block article %}
            {% endblock %}
        </article>

        <br>

        <footer class="footer mt-auto">
            {% block footer %}
                <div class="text-center p-3 text-light bg-dark">
                    &copy; {{ "now"|date('Y') }}
                </div>
            {% endblock %}
        </footer>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
