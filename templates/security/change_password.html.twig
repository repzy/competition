{% extends 'base.html.twig' %}

{% block title %}Зміна паролю{% endblock %}

{% block article %}
    <div class="container-fluid">
        <div class="row justify-content-center no-gutter">
            <div class="col-md-6 col-lg-6">
                <div class="card-body">
                    <div class="mb-3">
                        {% include 'flashes.html.twig' %}
                    </div>

                    <h5 class="card-title text-center">Зміна паролю</h5>
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_widget(form.old_password, {'attr': {'class': 'form-control', 'placeholder': 'Старий пароль'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.new_password['first'], {'attr': {'class': 'form-control', 'placeholder': 'Новий пароль'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.new_password['second'], {'attr': {'class': 'form-control', 'placeholder': 'Повторіть пароль'}}) }}
                    </div>
                    <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Змінити</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}