{% extends 'base.html.twig' %}

{% block title %}Увійти{% endblock %}

{% block article %}
    <div class="container-fluid">
        <div class="row justify-content-center no-gutter">
            <div class="col-md-6 col-lg-6">
                <div class="card-body">
                    <h5 class="card-title text-center">Вхід</h5>
                    <form class="" method="post">
                        <div class="form-group">
                            <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Пароль" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button class="btn btn-lg btn-primary btn-block text-uppercase form-group" type="submit">Увійти</button>
                        <div class="form-group text-center">
                            <a href="{{ path("resetting_request") }}">Відновити пароль</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
